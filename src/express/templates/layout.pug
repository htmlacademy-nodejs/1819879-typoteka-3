doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    meta(name='description' content='Личный блог Типотека')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title Типотека
    link(rel='preload' href='/fonts/Inter-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='/fonts/Inter-Medium.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='/fonts/SFProDisplay-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='stylesheet' href='/css/style.min.css')
  body
    mixin insertArticlePreviewImg(article)
      img.preview__background-image(
        src=`/img/${article.picture ? article.picture : `forest@2x.jpg`}`
        width='460'
        height='240'
        alt=article.title)

    mixin insertTransformDate(insertedDate)
      -var date = new Date(insertedDate)
      | #{`${date.getDate()}.${date.getMonth() + 1}.${date.getFullYear()}, ${date.getHours()}:${date.getMinutes()}`}

    .wrapper
      include  partials/header
      block content
      include  partials/footer
    script(src='/js/vendor.js')
    script(src='/js/main.js')
